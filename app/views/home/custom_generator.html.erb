<% content_for :title, "Custom number generator" %>
<h1>Custom number generator</h1>
<div class="container">
    <div class="form-group row">
      <label for="minInput" class="col-xs-2 col-form-label">Min value</label>
      <div class="col-xs-10">
        <input class="form-control" type="text" placeholder="0" value="0" id="minInput" required>
      </div>
    </div>
    
    <div class="form-group row">
      <label for="maxInput" class="col-xs-2 col-form-label">Max value</label>
      <div class="col-xs-10">
        <input class="form-control" type="text" placeholder="100" value="100" id="maxInput" required>
      </div>
    </div>
    
    <div class="form-group row">
      <label for="amountOfControlInput" class="col-xs-2 col-form-label">Amount of number</label>
      <div class="col-xs-10">
        <input class="form-control" type="text" placeholder="6" value="6" id="amountOfControlInput" required>
      </div>
    </div>
    
    <div class="form-check">
      <label class="form-check-label">
        <input class="form-check-input" type="checkbox" value="" id="enableDelayStopCheckbox">
        Enable delay stop for each number
      </label>
    </div>
    
     <button type="submit" class="btn btn-primary" id="btnSubmit">Submit</button>
</div>

<div class="container">
    <div class="row" id="outputDiv">
    
    </div>
</div>